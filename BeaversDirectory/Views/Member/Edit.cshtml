@model BeaversDirectory.Models.Beaver

@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-center">Edit Details for @Model.FirstName @Model.LastName</h3>



<form asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label">First Name</label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control" readonly="readonly"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label">Last Name</label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Town" class="col-md-2 control-label">Town</label>
        <div class="col-md-5">
            <input asp-for="Town" class="form-control" />
            <span asp-validation-for="Town" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Dob" class="col-md-2 control-label">Date of Birth</label>
        <div class="col-md-5">
            <input asp-for="Dob" class="form-control" />
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Lodge" class="col-md-2 control-label">Lodge</label>
        <div class="col-md-5">
            <input asp-for="Lodge" class="form-control" />
            <span asp-validation-for="Lodge" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="IsLodgeLeader" class="col-md-2 control-label">Lodge Leader? (check or uncheck)</label>
        <div class="col-md-5">
            <input asp-for="IsLodgeLeader" class="form-control" />
            <span asp-validation-for="IsLodgeLeader" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group hidden">
        <label asp-for="ParentUserName" class="col-md-2 control-label">User Name</label>
        <div class="col-md-5">
            <input asp-for="ParentUserName" class="form-control"/>
            <span asp-validation-for="ParentUserName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-success" value="Submit changes" />
        </div>
    </div>

</form>
